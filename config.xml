<config>
    
    <listeners>
        <child_processes>2</child_processes>    
    </listeners>
    
    <fedora>
        <host>192.168.200.140</host>
        <port>8080</port>
        <username>fedoraAdmin</username>
        <password>fedoraAdmin</password>
    </fedora>
    
    <stomp>
        <host>192.168.200.140</host>
        <port>61613</port>
        <channel>/queue/listener.update</channel>
    </stomp>
    
    <derivatives>
        <object>
            <nameSpace>islandora</nameSpace>
            <contentModel>fedora-system:FedoraObject-3.0</contentModel>
            <contentModel>fedora-system:FedoraObject-2.0</contentModel>
            <method>ingest</method>
            <method>test</method>
            <datastream>TIFF</datastream>
            <derivative>
                <dsid>TN</dsid>
                <label>Thumbnail</label>
                <function>TN</function>
            </derivative>
            <derivative>
                <dsid>JPG</dsid>
                <label>JPEG image</label>
                <function>JPG</function>
            </derivative>
            <derivative>
                <dsid>JP2</dsid>
                <label>Compressed jp2</label>
                <function>JP2</function>
            </derivative>  
            <derivative>
                <dsid>OCR</dsid>
                <label>Scanned text</label>
                <function>OCR</function>
            </derivative>
            <derivative>
                <dsid>HOCR</dsid>
                <label>HOCR</label>
                <function>HOCR</function>
            </derivative>  
            <derivative>
                <dsid>ENCODED_OCR</dsid>
                <label>Encoded OCR</label>
                <function>ENCODED_OCR</function>
            </derivative>     
            <derivative>
                <dsid>TECHMD</dsid>
                <label>Technical metadata</label>
                <function>TECHMD</function>
            </derivative> 
        </object>
        <object>
            <nameSpace>leg</nameSpace>
            <contentModel>fedora-system:FedoraObject-3.0</contentModel>
            <contentModel>fedora-system:FedoraObject-2.0</contentModel>
            <method>ingest</method>
            <method>test</method>
            <datastream>TIFF</datastream>
            <derivative>
                <dsid>TN</dsid>
                <label>Thumbnail</label>
                <function>TN</function>
            </derivative>
            <derivative>
                <dsid>TECHMD</dsid>
                <label>Technical metadata</label>
                <function>TECHMD</function>
            </derivative>   
            <derivative>
                <dsid>ENCODED_OCR</dsid>
                <label>Encoded OCR</label>
                <function>ENCODED_OCR</function>
            </derivative>              
        </object>
    </derivatives>
    
    <log>
        <file>listener.log</file>
    <!-- Log level 1 = debug, 2 = info, 3 = error, 4 = critical -->
        <level>1</level>
    </log>

</config>
